    <style>
        /* Reset the styling of the textarea object */
        textarea {
            resize: none;
        }

        textarea:focus {
            outline: none !important;
            box-shadow: none !important;
        }
    </style>
</head>

<body class="min-vh-100 mh-100">
    <div class="container-fluid min-vh-100 mh-100 d-flex flex-column">
        <div class="row flex-grow-1">
            <div class="col d-flex">
                <pre
                    class="mh-100 h-100 flex-fill"><code id="text">{{text["content"]}}</code></pre>
            </div>
        </div>
        <nav class="navbar bg-body user-select-none">
            <div class="container-fluid">
                <small class="navbar-text" id="stats"></small>
                <form>
                    <div class="dropup dropup-center">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Format as
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a id="format_as_json" class="dropdown-item" href="#">JSON</a></li>
                            <li><a id="format_as_markdown" class="dropdown-item" href="#">Markdown</a></li>
                            <li><a id="format_as_text" class="dropdown-item" href="#">Text</a></li>
                            <li><a id="format_as_xml" class="dropdown-item" href="#">XML</a></li>
                        </ul>
                    </div>
                </form>
            </div>
        </nav>
    </div>

    <script src="static/jquery-3.7.1.min.js"
        integrity="sha384-1H217gwSVyLSIfaLxHbE7dRb3v4mYCKbpQvzx0cegeju1MVsGrX5xXxAvs/HgeFs"
        crossorigin="anonymous"></script>
    <script src="static/bootstrap@5.3.7.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>
    <script src="static/highlight.min.js"
        integrity="sha512-EBLzUL8XLl+va/zAsmXwS7Z2B1F9HUHkZwyS/VKwh3S7T/U0nF4BaU29EP/ZSf6zgiIxYAnKLu6bJ8dqpmX5uw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        // Without decoupling the code for Jinja from JS the code beautifiers freak out
        var MAXLENGTH = {{ maxlength }};

        function calculateStats(text) {
            var characters = text.length;
            var lines = 0;
            var words = 0;

            if (characters) {
                words = text.trim().split(/\s+/).length;
                lines = text.split("\n").length;
            }

            return [lines, words, characters];
        }

        function updateStats(text) {
            var characters;
            var lines;
            var words;

            [lines, words, characters] = calculateStats(text);

            $("#stats").html(
                "Lines: " + lines + " - Words: " + words + " - Characters: " + characters
            );

            if (characters > MAXLENGTH) {
                $("#stats").css("color", "crimson");
                $("#save").prop("disabled", true);
            } else {
                $("#stats").css("color", "gray");
                $("#save").prop("disabled", false);
            }
        }

        $(document).ready(function () {
            var text = $("code#text").html();

            if (text) {
                // Calculate stats
                updateStats(text);
                // Beautify code
                hljs.highlightAll();
            } else {
                // Set focus on textarea
                $("textarea#text").focus();
            }

            // Set menu links
            $("#format_as_json").attr("href", document.location.pathname + ".json");
            $("#format_as_markdown").attr("href", document.location.pathname + ".md");
            $("#format_as_text").attr("href", document.location.pathname + ".txt");
            $("#format_as_xml").attr("href", document.location.pathname + ".xml");
        });
    </script>
</body>

