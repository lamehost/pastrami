    <style>
        /* Reset the styling of the textarea object */
        textarea {
            resize: none;
        }

        textarea:focus {
            outline: none !important;
            box-shadow: none !important;
        }
    </style>
</head>

<body class="min-vh-100 mh-100">
    <div class="container-fluid min-vh-100 mh-100 d-flex flex-column">
        <div class="row flex-grow-1">
            <div class="col d-flex mt-2">
                <textarea class="border border-0 flex-fill h-100" id="text"
                    placeholder="[ write or paste your text, then click the button or hit ctrl+s to save ]"
                    spellcheck="false"></textarea>
            </div>
        </div>
        <nav class="navbar bg-body user-select-none">
            <div class="container-fluid">
                <small class="navbar-text" id="stats"></small>
                <form>
                    <button type="submit" class="btn btn-outline-primary" id="save" title="Click to save">
                        <u>S</u>ave
                    </button>
                </form>
            </div>
        </nav>
    </div>

    <script src="static/jquery-3.7.1.min.js"
        integrity="sha384-1H217gwSVyLSIfaLxHbE7dRb3v4mYCKbpQvzx0cegeju1MVsGrX5xXxAvs/HgeFs"
        crossorigin="anonymous"></script>
    <script src="static/bootstrap@5.3.7.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>

    <script>
        // Without decoupling the code for Jinja from JS the code beautifiers freak out
        var MAXLENGTH = {{ maxlength }};

        function calculateStats(text) {
            var characters = text.length;
            var lines = 0;
            var words = 0;

            if (characters) {
                words = text.trim().split(/\s+/).length;
                lines = text.split("\n").length;
            }

            return [lines, words, characters];
        }

        function updateStats(text) {
            var characters;
            var lines;
            var words;

            [lines, words, characters] = calculateStats(text);

            $("#stats").html(
                "Lines: " + lines + " - Words: " + words + " - Characters: " + characters
            );

            if (characters > MAXLENGTH) {
                $("#stats").css("color", "crimson");
                $("#save").prop("disabled", true);
            } else {
                $("#stats").css("color", "gray");
                $("#save").prop("disabled", false);
            }
        }

        function saveContent() {
            var text;

            text = $("#text").val();
            $.ajax({
                contentType: "application/json",
                data: JSON.stringify({ content: text }),
                dataType: "json",
                method: "POST",
                processData: false,
                url: "/"
            }).done(function (data) {
                window.location.href = data.text_id;
            }).fail(function (jqXHR) {
                $("#stats").css("color", "crimson");
                $("#info").html(
                    JSON.parse(jqXHR.responseText).detail
                );
            });
        }

        $(document).bind("keydown", function (event) {
            var characters;
            var lines;
            var text = $("#text").val();
            var words;

            if (event.keyCode === 83 && event.ctrlKey) {
                [lines, words, characters] = calculateStats(text);
                if (characters <= MAXLENGTH) {
                    saveContent();
                }
                event.preventDefault();
            } else {
                updateStats(text);
            }
        });

        $(document).bind("keyup", function () {
            var text = $("#text").val();

            updateStats(text);
        });

        $("#text").bind("paste", function (event) {
            var text = $("#text").val()

            updateStats(text);
        });

        $("#save").click(function (event) {
            event.preventDefault();
            saveContent();
        });
    </script>
</body>

